/*-----QWidget-----*/
QWidget
{
	background-color: #0b385f;
	border: transparent;
}


/*-----QLabel-----*/
QLabel
{
	background-color: transparent;
	color: #e7e9e7;
	font-size: 13px;
	padding: 4px;
}

/*-----QRadioButton-----*/
QRadioButton
{
	background-color: transparent;
	color: #e7e9e7;
	height: 14px;
	width: 14px; 
	border-radius: 7px;
}

QRadioButton::indicator
{
    color: #e7e9e7;
    background-color: #666d72;
    border: 1px solid #e7e9e7;
	height: 10px;
	width: 10px; 
	border-radius: 5px;
}


QRadioButton::indicator:checked
{
	background-color: #e7e9e7;
}


QRadioButton::indicator:unchecked:hover
{
    border: 1px solid #e7e9e7;
}


QRadioButton:disabled
{
	color: #232425;
}


QRadioButton::indicator:disabled
{
	background-color: #666d72;
	color: #666d72;
    border: 1px solid #666d72;
}



/*-----QComboBox-----*/
QComboBox
{
	background-color: transparent;
	color: #e7e9e7;
	font-size: 11px;
	padding: 1px 3px 1px 3px;
    min-width: 6em;
	border-radius: 5px;
}

QComboBox:hover
{
	border: 1px solid #e7e9e7;
	border-radius: 5px;
}

QComboBox:item:selected
{
	background-color: #e7e9e7;
	color: #666d72;
}
